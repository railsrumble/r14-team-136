<h3>Drop Model</h3>
<%= form_tag "/drop_model" do %>
<div class="form-group">
	<label class="control-label col-md-3">ModelName<span class="required"> * </span> </label>
	<div class="col-md-8">
		<%= select_tag "model_name", @ar_decendants.collect{|c| "<option>#{c.name}</option>"}.join.html_safe %>
		
	</div>
</div>
<div class="form-group ">
	<%= submit_tag "Drop", :class => "btn btn-default" %>
</div>

<% end %>
