<div class="form-group add_column_form_body">

	<input type="hidden" value="<%= klass %>" name="add_column[table_name]" />

	<div class="col-md-3">
		<label>Column Name </label>
		<input type="text" class="form-control" name="add_column[0][column_name]"  />
	</div>
	<div class="col-md-8">
		<label>Add  Data Type to New Column</label>
		<br/>
		<%= select_tag "add_column[0][data_type]",
		"<option>binary</option>
		<option>boolean</option>
		<option>date</option>
		<option>datetime</option>
		<option>decimal</option>
		<option>float</option>
		<option>integer</option>
		<option>primary_key</option>
		<option>references</option>
		<option>string</option>
		<option>text</option>
		<option>time</option>
		<option>timestamp </option>
		".html_safe %>
	</div>

</div>
<input type="hidden" value="0" id="add_column_column_<%= klass %>_count" />
<a href="#" id="add_column_column_<%= klass %>" class="add_column_button">add row</a>

